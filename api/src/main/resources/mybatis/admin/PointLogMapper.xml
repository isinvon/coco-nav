<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.admin.mapper.PointLogMapper">
    
    <resultMap type="PointLog" id="PointLogResult">
        <result property="pointLogId"    column="point_log_id"    />
        <result property="userId"    column="user_id"    />
        <result property="changeType"    column="change_type"    />
        <result property="amount"    column="amount"    />
        <result property="balance"    column="balance"    />
        <result property="source"    column="source"    />
        <result property="action"    column="action"    />
        <result property="description"    column="description"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPointLogVo">
        select point_log_id, user_id, change_type, amount, balance, source, action, description, create_time, update_time from coco_point_log
    </sql>

    <select id="selectPointLogList" parameterType="PointLog" resultMap="PointLogResult">
        <include refid="selectPointLogVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="changeType != null "> and change_type = #{changeType}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="balance != null "> and balance = #{balance}</if>
            <if test="source != null  and source != ''"> and source = #{source}</if>
            <if test="action != null "> and action = #{action}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
        </where>
    </select>
    
    <select id="selectPointLogByPointLogId" parameterType="Long" resultMap="PointLogResult">
        <include refid="selectPointLogVo"/>
        where point_log_id = #{pointLogId}
    </select>

    <insert id="insertPointLog" parameterType="PointLog" useGeneratedKeys="true" keyProperty="pointLogId">
        insert into coco_point_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="changeType != null">change_type,</if>
            <if test="amount != null">amount,</if>
            <if test="balance != null">balance,</if>
            <if test="source != null">source,</if>
            <if test="action != null">action,</if>
            <if test="description != null">description,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="changeType != null">#{changeType},</if>
            <if test="amount != null">#{amount},</if>
            <if test="balance != null">#{balance},</if>
            <if test="source != null">#{source},</if>
            <if test="action != null">#{action},</if>
            <if test="description != null">#{description},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePointLog" parameterType="PointLog">
        update coco_point_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="changeType != null">change_type = #{changeType},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="source != null">source = #{source},</if>
            <if test="action != null">action = #{action},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where point_log_id = #{pointLogId}
    </update>

    <delete id="deletePointLogByPointLogId" parameterType="Long">
        delete from coco_point_log where point_log_id = #{pointLogId}
    </delete>

    <delete id="deletePointLogByPointLogIds" parameterType="String">
        delete from coco_point_log where point_log_id in 
        <foreach item="pointLogId" collection="array" open="(" separator="," close=")">
            #{pointLogId}
        </foreach>
    </delete>
</mapper>