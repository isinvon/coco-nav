<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.admin.mapper.BookmarkArticleMapper">
    
    <resultMap type="BookmarkArticle" id="BookmarkArticleResult">
        <result property="articleId"    column="article_id"    />
        <result property="bookmarkId"    column="bookmark_id"    />
        <result property="content"    column="content"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBookmarkArticleVo">
        select article_id, bookmark_id, content, create_time, update_time from coco_bookmark_article
    </sql>

    <select id="selectBookmarkArticleList" parameterType="BookmarkArticle" resultMap="BookmarkArticleResult">
        <include refid="selectBookmarkArticleVo"/>
        <where>  
            <if test="bookmarkId != null "> and bookmark_id = #{bookmarkId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
        </where>
    </select>
    
    <select id="selectBookmarkArticleByArticleId" parameterType="Long" resultMap="BookmarkArticleResult">
        <include refid="selectBookmarkArticleVo"/>
        where article_id = #{articleId}
    </select>

    <insert id="insertBookmarkArticle" parameterType="BookmarkArticle" useGeneratedKeys="true" keyProperty="articleId">
        insert into coco_bookmark_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookmarkId != null">bookmark_id,</if>
            <if test="content != null">content,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookmarkId != null">#{bookmarkId},</if>
            <if test="content != null">#{content},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBookmarkArticle" parameterType="BookmarkArticle">
        update coco_bookmark_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookmarkId != null">bookmark_id = #{bookmarkId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where article_id = #{articleId}
    </update>

    <delete id="deleteBookmarkArticleByArticleId" parameterType="Long">
        delete from coco_bookmark_article where article_id = #{articleId}
    </delete>

    <delete id="deleteBookmarkArticleByArticleIds" parameterType="String">
        delete from coco_bookmark_article where article_id in 
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>