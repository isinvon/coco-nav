<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.admin.mapper.PointMapper">
    
    <resultMap type="Point" id="PointResult">
        <result property="pointId"    column="point_id"    />
        <result property="userId"    column="user_id"    />
        <result property="balance"    column="balance"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPointVo">
        select point_id, user_id, balance, create_time, update_time from coco_point
    </sql>

    <select id="selectPointList" parameterType="Point" resultMap="PointResult">
        <include refid="selectPointVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="balance != null "> and balance = #{balance}</if>
        </where>
    </select>
    
    <select id="selectPointByPointId" parameterType="Long" resultMap="PointResult">
        <include refid="selectPointVo"/>
        where point_id = #{pointId}
    </select>

    <insert id="insertPoint" parameterType="Point" useGeneratedKeys="true" keyProperty="pointId">
        insert into coco_point
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="balance != null">balance,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="balance != null">#{balance},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePoint" parameterType="Point">
        update coco_point
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where point_id = #{pointId}
    </update>

    <delete id="deletePointByPointId" parameterType="Long">
        delete from coco_point where point_id = #{pointId}
    </delete>

    <delete id="deletePointByPointIds" parameterType="String">
        delete from coco_point where point_id in 
        <foreach item="pointId" collection="array" open="(" separator="," close=")">
            #{pointId}
        </foreach>
    </delete>
</mapper>